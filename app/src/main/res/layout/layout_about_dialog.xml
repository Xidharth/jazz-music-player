<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingBottom="16dp"


    android:weightSum="1">

<LinearLayout
    android:orientation="vertical"
    android:background="#2e7d32"
    android:layout_width="match_parent"
    android:layout_height="130dip">

    <TextView
        android:id="@+id/app_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Body1"/>

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="80dip"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="80dip" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/timber_about_opensource"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/googleplus"
        android:text="Facebook"
        android:textSize="17sp"
        android:clickable="true"
        style="@style/TextAppearance.AppCompat.Body1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:text="Twitter"
        android:textSize="17sp"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="10dip" />

    <TextView
        android:id="@+id/source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="Licenced under Creative Commons Attribution-ShareAlike 4.0 International (CC BY-SA 4.0)"
        android:textSize="16sp"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_weight="0.03" />




    <TextView
            android:id="@+id/dismiss_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:layout_gravity="right"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:layout_marginRight="20dp"
            android:background="?selectableItemBackgroundBorderless"
        android:layout_marginTop="20dip" />

</LinearLayout>